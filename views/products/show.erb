

<table>
    <tr>
      <th id="tl"> Name </th>
      <th> Category </th>
      <th> Description </th>
      <th> Buy Cost </th>
      <th> Sell Cost </th>
      <th> Quantity </th>
      <th id="tr"> </th>
    </tr>
  <% for product in @products %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.category %></td>
      <td><%= product.description %></td>
      <td><%= product.buy_cost %></td>
      <td><%= product.sell_cost %></td>
      <td class="<%= product.quantity == 0 ? 'out_of_stock' : product.quantity <= 2 ? 'low' : 'in_stock' %>"><%= product.quantity %> </td>
      <td>
        <form action="/products/<%= product.id %>" method="get">
          <button type="submit"> Update </button>
        </form>
      </td>
    </tr>
  <% end %>
</table>
