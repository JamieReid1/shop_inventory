
<h1> Product </h1>

<form class="update_form" action="/products/<%= @stock.product.id %>" method="post">

    <label for="name">Name</label> <br>
    <input type="text" id="name" name="name" value="<%= @stock.product.name %>">
      <br>
    <label for="category">Category</label> <br>
    <input type="text" id="category" name="category" value="<%= @stock.product.category %>">
      <br>
    <label for="description">Description</label> <br>
    <input type="text" id="description" name="description" value="<%= @stock.product.description %>">
      <br>
    <label for="buy_cost">Buy Cost</label> <br>
    <input type="number" id="buy_cost" name="buy_cost" value="<%= @stock.product.buy_cost %>">
      <br>
    <label for="sell_cost">Sell Cost</label> <br>
    <input type="number" id="sell_cost" name="sell_cost" value="<%= @stock.product.sell_cost %>">
      <br>
    <label for="quantity">Quantity</label> <br>
    <input type="number" id="quantity" name="quantity" value="<%= @stock.quantity %>">
      <br>
    <button type="submit"> Update </button>

</form>
